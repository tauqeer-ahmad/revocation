<section id='contact' class='gray-section contact'>
  <div class='container'>
    <div class='row m-b-lg'>
      <div class='col-lg-12 text-center'>
        <div class='navy-line'></div>
        <h1>Contact Us</h1>
        <p>Donec sed odio dui. Etiam porta sem malesuada magna mollis euismod.</p>
      </div>
    </div>

    <div class='row m-b-lg'>
      <% if @institution.present? %>
        <div class='col-lg-3 col-lg-offset-3'>
          <address>
            <strong><span class='navy'><%= @institution.name %></span></strong>
            <div><%= @institution.address %></div>
            <div><abbr title='Phone'>Phone:</abbr> <%= @institution.phone_number %></div>
            <div><abbr title='Phone'>Fax:</abbr> <%= @institution.fax_number %></div>
          </address>
        </div>
        <div class='col-lg-4'>
          <p class='text-color'>
            <%= @institution.contact_description %>
          </p>
        </div>
      <% else %>
        <div class='col-lg-3 col-lg-offset-3'>
          <address>
            <strong><span class='navy'>Revocation.</span></strong><br/>
            795 Folsom Ave, Suite 600<br/>
            San Francisco, CA 94107<br/>
            <abbr title='Phone'>Phone:</abbr> (123) 456-7890
          </address>
        </div>
        <div class='col-lg-4'>
          <p class='text-color'>
            Consectetur adipisicing elit. Aut eaque, totam corporis laboriosam veritatis quis ad perspiciatis, totam corporis laboriosam veritatis, consectetur adipisicing elit quos non quis ad perspiciatis, totam corporis ea,
          </p>
        </div>
      <% end %>
    </div>

    <div class='row'>
      <div class='col-lg-12 text-center'>
        <%= button_tag 'Send us mail', type: :button, class: 'btn btn-primary', data: { toggle: 'modal', target: '#contact-modal' } %>

        <p class='m-t-sm'>Or follow us on social platform</p>

        <ul class='list-inline social-icon'>
          <% if @institution.present? %>
            <li><%= link_to(@institution.twitter_url, target: '_blank') { icon_of('fa fa-twitter') } %></li>
            <li><%= link_to(@institution.facebook_url, target: '_blank') { icon_of('fa fa-facebook') } %></li>
            <li><%= link_to(@institution.linkedin_url, target: '_blank') { icon_of('fa fa-linkedin') } %></li>
          <% else %>
            <li><%= link_to('#', target: '_blank') { icon_of('fa fa-twitter') } %></li>
            <li><%= link_to('#', target: '_blank') { icon_of('fa fa-facebook') } %></li>
            <li><%= link_to('#', target: '_blank') { icon_of('fa fa-linkedin') } %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class='row'>
      <div class='col-lg-8 col-lg-offset-2 text-center m-t-lg m-b-lg'>
        <p>
          <strong>&copy; 2017 Revoech</strong><br/>
          Revoech is introducing revolutionary technology in the society.
        </p>
      </div>
    </div>
  </div>
</section>

<div class='modal inmodal' id='contact-modal' tabindex='-1' role='dialog' aria-hidden='true' style='display: none;'>
  <div class='modal-dialog'>
    <div class='modal-content animated flipInY'>
      <div class='modal-header'>
        <button type='button' class='close' data-dismiss='modal'>
          <span aria-hidden='true'>Ã—</span><span class='sr-only'>Close</span>
        </button>

        <h4 class='modal-title'>Contact Form</h4>
        <small class='font-bold'>All the suggestions or queries will be welcomed.</small>
      </div>

      <%= form_tag contact_us_path, class: 'form-horizontal' do %>
        <div class='modal-body text-center'>
          <div class="form-group m-t-md">
            <div class="col-sm-6 col-sm-offset-3">
              <%= text_field_tag :email, nil, required: true, maxlength: 60, placeholder: 'Your Email Address', class: 'form-control' %>
            </div>
          </div>

          <div class="form-group m-t-md">
            <div class="col-sm-6 col-sm-offset-3">
              <%= text_field_tag :contact_number, nil, maxlength: 60, placeholder: 'Your Contact Number', class: 'form-control' %>
            </div>
          </div>

          <div class="form-group m-t-md">
            <div class="col-sm-6 col-sm-offset-3">
              <%= text_field_tag :subject, nil, required: true, maxlength: 60, placeholder: 'Subject', class: 'form-control' %>
            </div>
          </div>

          <div class="form-group m-t-md">
            <div class="col-sm-6 col-sm-offset-3">
              <%= text_area_tag :message, nil, required: true, maxlength: 200, rows: 5, placeholder: 'Message', class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class='modal-footer text-center'>
          <%= button_tag 'Send Email', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
