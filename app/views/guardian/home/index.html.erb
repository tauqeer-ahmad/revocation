<div class="wrapper wrapper-content animated fadeInUp">
  <div class="row">
    <div class="col-sm-12">
      <div class='ibox float-e-margins'>
        <div class='ibox-title'>
          <h5>Schedules <small><%= current_term.display_name %></small></h5>
        </div>

        <div class='clearfix'></div>
        <% if selected_student.present? %>
          <div class='ibox-content'>
            <div id='calendar'></div>
          </div>
        <% else %>
          <div class="col-lg-12">
            <div class="middle-box text-center animated fadeInRightBig">
              <h3 class="font-bold">Content Not Available</h3>
              <div class="error-desc">
                You are logged in. However, your account has no student associated with it! Please contact our admin to fix this.
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
