<div id="marksheet" class='wrapper wrapper-content animated fadeInRight'>
  <div class='row'>
    <div class='col-lg-12'>
      <div class='ibox float-e-margins'>
        <div class='ibox-title'>
          <h5>Add Marks Students <small> Please fill the details correctly</small></h5>
        </div>

        <div class='clearfix'></div>

        <div class='ibox-content'>
          <%= form_tag create_marksheet_administrator_marksheets_path, class: 'form-horizontal' do %>
            <%= hidden_field_tag 'exam_id', @exam.id %>
            <%= hidden_field_tag 'klass_id', @klass.id %>
            <%= hidden_field_tag 'section_id', @section.id %>
            <%= hidden_field_tag 'subject_id', @subject.id %>
            <div class='form-inputs'>
              <div class='form-group'>
                <div class='col-sm-6'>
                  <label class="control-label">Total Marks</label>
                  <%= number_field_tag :total, nil, required: true, maxlength: 60, placeholder: 'Total Marks', class: 'form-control' %>
                </div>

                <div class='col-sm-6'>
                  <label class="control-label">Passing Marks</label>
                  <%= number_field_tag :passing_marks, nil, required: true, maxlength: 60, placeholder: 'Passing Marks', class: 'form-control' %>
                </div>
              </div>
            </div>
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Roll Number</th>
                  <th>Student Name</th>
                  <th>
                    Obtained Marks
                  </th>
                  <th>Remarks</th>
                </tr>
              </thead>
              <tbody>
                <% @students.each  do |student| %>
                  <tr>
                    <td><%= student.roll_number %></td>
                    <td><%= student.name %></td>
                    <td>
                    <%= number_field_tag 'students[][obtained]', nil, required: true, maxlength: 60, placeholder: 'Obtained Marks', class: 'form-control' %>
                    <%= hidden_field_tag 'students[][student_id]', student.id %>
                    </td>
                    <td><%= text_field_tag 'students[][comment]', nil, maxlength: 60, placeholder: 'Remarks', class: 'form-control' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class='clearfix'></div>

            <div class='form-group text-center'>
              <div class='row'>
                <div class='col-sm-12'>
                  <%= submit_tag 'Update Marks', class: 'btn btn-primary' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
