<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-9'>
    <h2>
      <%= link_to :back, class: 'btn btn-sm btn-primary btn-outline m-t-n-xs' do %>
        <i class='fa fa-arrow-left'></i>
      <% end %>

      Exams
    </h2>

    <ol class='breadcrumb'>
      <li>
        <%= link_to 'Home', administrator_root_path %>
      </li>

      <li class='active'>
        <strong>Manage Marks</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
  <div class="row">
    <div class="col-sm-12">
      <div class="ibox">
        <div class="ibox-content">
          <%= form_tag build_marksheet_administrator_marksheets_path, method: :get, remote: true do %>
            <div class="row">
              <div class="col-md-2">
                <div class="form-group">
                  <label style="margin-bottom: 5px;">Class</label>
                  <div class="input-group">
                    <%= select_tag :klass_id, options_for_select(@klasses.collect {|e| [ e.name, e.id ] }, params[:klass_id]), prompt: "Select Class", class: "select2_dropdown selectable_klass", required: true %>
                  </div>
                </div>
              </div>

              <div id="subject_holder">
                <div class="col-md-2">
                  <div class="form-group">
                    <label style="margin-bottom: 5px;">Section</label>
                    <div class="input-group">
                      <%= select_tag :section_id, options_for_select([]), prompt: "Select Section", class: "select2_dropdown selectable_section", disabled:false, required: true, data: {selected: params[:section_id]} %>
                    </div>
                  </div>
                </div>
                <div class="col-md-2">
                  <div class="form-group">
                    <label style="margin-bottom: 5px;">Exam</label>
                    <div class="input-group">
                      <%= select_tag :exam_id, options_for_select([]), prompt: "Select Exam", class: "select2_dropdown selectable_exam", required: true, data: {selected: params[:exam_id]} %>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group">
                    <label style="margin-bottom: 5px;">Subject</label>
                    <div class="input-group">
                      <%= select_tag :subject_id, options_for_select([]), prompt: "Select Subject", class: "select2_dropdown selectable_subject", disabled: false, required: true, data: {selected: params[:subject_id]} %>
                    </div>
                  </div>
                </div>
                <div class="col-md-2" style="margin-top: 20px;">
                  <center>
                    <button type="submit" class="btn btn-block btn-sm btn-primary">Manage Marks</button>
                  </center>
                </div>
              </div>
            </div>
          <% end %>
          <div id="marksheet"></div>
        </div>
      </div>
    </div>
  </div>
</div>

