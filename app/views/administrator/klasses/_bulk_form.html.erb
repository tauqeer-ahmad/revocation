<div class='wrapper wrapper-content animated fadeInRight'>
  <div class='row'>
    <div class='col-lg-12'>
      <div class='ibox float-e-margins'>
        <div class='ibox-title'>
          <h5>Register Teachers <small> Please fill the details correctly</small></h5>
        </div>

        <div class='clearfix'></div>

        <div class='ibox-content'>
          <%= form_tag bulk_insert_administrator_klasses_path, class: 'form-horizontal', id: 'bulk-form' do %>
            <div id='form-fields'>
              <% 5.times do %>
                <div class='whole-form'>
                  <div class='form-group'>
                    <div class='row'>
                      <div class='col-sm-4'>
                        <%= text_field_tag 'klasses[][name]', nil, maxlength: 60, placeholder: 'Name', class: 'form-control' %>
                      </div>

                      <div class='col-sm-4'>
                        <%= text_field_tag 'klasses[][code]', nil, maxlength: 60, placeholder: 'Code', class: 'form-control' %>
                      </div>

                      <div class='col-sm-1'>
                        <%= button_tag type: :button, class: 'btn btn-danger delete-row-btn' do %>
                          <i class='fa fa-trash' aria-hidden='true'></i>
                        <% end %>
                      </div>
                    </div>
                  </div>
                  <hr>
                </div>
              <% end %>
            </div>

            <div class='clearfix'></div>

            <div class='form-group text-center'>
              <div class='row'>
                <div class='col-sm-12'>
                  <%= button_tag type: :button, class: 'btn btn-info btn-md', id: 'add-row-btn' do %>
                    <i class='fa fa-plus' aria-hidden='true'></i> Add Row
                  <% end %>
                </div>
              </div>
            </div>

            <div class='form-group text-center'>
              <div class='row'>
                <div class='col-sm-12'>
                  <%= submit_tag 'Insert All Classes', class: 'btn btn-primary btn-lg' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type='text/javascript'>
    SingleModelBulkInsertion.init();
  </script>
<% end %>
