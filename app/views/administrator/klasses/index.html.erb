<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>Classes</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Home', administrator_root_path %>
      </li>
      <li class="active">
        <strong>Classes</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
  <div class="row">
    <div id='left-section' class="col-sm-8">
      <div class="ibox">
        <div class="ibox-content">
          <h2>Classes</h2>
          <div class="clients-list">
            <ul class="nav nav-tabs">
              <span class="pull-right small text-muted"><%= "#{@klasses.count} Classes" %></span>
              <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-user"></i> Classes</a></li>
              <li class=""><a data-toggle="tab" href="#tab-2"><i class="fa fa-briefcase"></i> Add new Class</a></li>
              <li class=""><a data-toggle="tab" href="#tab-3"><i class="fa fa-briefcase"></i> Add Bulk classes</a></li>
            </ul>
            <div class="tab-content">
              <div id="tab-1" class="tab-pane active">
                <%= render partial: 'shared/search_box', locals: {path: administrator_klasses_path} %>
                <div class="full-height-scroll">
                  <div class="table-responsive">
                    <table class="table table-striped table-hover selectable-table table-bordered">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Name</th>
                          <th>code</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @klasses.each_with_index do |klass, index| %>
                          <tr id="row-klass-<%= klass.id %>" class="selectable-row <% if index == 0 %> table-helighted-row <% end %>">
                            <td><%= index.succ %></td>
                            <td>
                              <%= link_to "#klass-#{klass.id}", data: { toggle: 'tab' }, marker: "klass-#{klass.id}", class: "client-link selected-data-row" do %>
                                <%= klass.name %>
                              <% end %>
                            </td>
                            <td>
                              <%= link_to "#klass-#{klass.id}", data: { toggle: 'tab' }, marker: "klass-#{klass.id}", class: "client-link selected-data-row" do %>
                                <%= klass.code %>
                              <% end %>
                            </td>
                            <td>
                              <%= link_to administrator_klass_path(klass), class: "btn btn-success btn-outline dim btn-xs", data: { toggle: 'tooltip', placement: 'top' }, title: 'View' do %>
                                <i class="fa fa-eye"></i>
                              <% end %>
                              <%= link_to edit_administrator_klass_path(klass), class: "btn btn-info btn-outline dim btn-xs", data: { toggle: 'tooltip', placement: 'top' }, title: 'Edit' do %>
                                <i class="fa fa-pencil-square-o"></i>
                              <% end %>
                               <%= link_to administrator_klass_path(klass), class: "btn btn-danger btn-outline dim btn-xs", data: { toggle: 'tooltip', placement: 'top', behavior: 'delete', object: klass.class.name }, title: 'Delete' do %>
                                <i class="fa fa-trash-o"></i>
                              <% end %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>

              <div id="tab-2" class="tab-pane">
                <div class="full-height-scroll">
                  <%= render 'form', klass: @new_klass %>
                </div>
              </div>

              <div id="tab-3" class="tab-pane">
                <div class="full-height-scroll">
                  <%= render 'bulk_form' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="ibox ">
        <div class="ibox-content">
          <div class="tab-content">
            <% @klasses.each_with_index do |klass, index| %>
              <% sections = klass.current_sections(current_term.id) %>
              <div id="klass-<%= klass.id %>" class="tab-pane <% if index == 0 %> active <% end %>">
                <div class="row m-b-lg">
                  <div class="col-lg-12 text-center">
                    <h1><%= link_to klass.name, [:administrator, klass], class: 'btn-link' %></h1>
                  </div>
                </div>

                <div class="row m-b-lg">
                  <div class="col-lg-4 text-center">
                    <h4><span class="badge badge-info"><%= sections.collect(&:students).flatten.count %></span></h4>
                    <i>Students</i>
                  </div>

                  <div class="col-lg-4 text-center">
                    <h4><span class="badge badge-warning"><%= sections.count %></span></h4>
                    <i>Sections</i>
                  </div>

                  <div class="col-lg-4 text-center">
                    <h4><span class="badge badge-danger"><%= sections.collect(&:teachers).flatten.count %></span></h4>
                    <i>Teachers</i>
                  </div>
                </div>

                <div class="client-detail">
                  <div class="full-height-scroll">
                    <div class='text-center'><strong>Sections Details</strong></div>

                    <table class='table small m-b-xs m-t-md'>
                      <thead>
                        <tr>
                          <th>Section</th>
                          <th>Subjects</th>
                          <th>Teachers</th>
                          <th>Students</th>
                        </tr>
                      </thead>

                      <tbody>
                        <% klass.sections.of_current_term(current_term.id).each do |section| %>
                          <tr>
                            <td>
                              <%= link_to section.name, administrator_section_students_path(section), class: 'btn-link' %>
                            </td>
                            <td><%= section.subjects.count %></td>
                            <td><%= section.teachers.uniq.count %></td>
                            <td><%= section.students.count %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :javascript do %>
  enable_autocomplete('/administrator/classes')
<% end %>
