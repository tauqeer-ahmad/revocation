<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>Classes</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Home', administrator_root_path %>
      </li>
      <li>
        <%= link_to 'Classes', administrator_klasses_path %>
      </li>
      <li class="active">
        <strong><%= @klass.name %></strong>
      </li>
    </ol>
  </div>
</div>

<div id='class-wrapper'>
  <div class='wrapper wrapper-content animated fadeInRight'>
    <div class='row m-b-lg'>
      <div class='col-lg-12 text-center'>
        <h1><%= @klass.name %></h1>
      </div>
    </div>

    <div class='row m-b-lg'>
      <div class='col-lg-4 text-center'>
        <h2><span class='label label-info'><%= @students_count %></span></h2>
        <h2><i>Students</i></h2>
      </div>

      <div class='col-lg-4 text-center'>
        <h2><span class='label label-warning'><%= @sections.count %></span></h2>
        <h2><i>Sections</i></h2>
      </div>

      <div class='col-lg-4 text-center'>
        <h2><span class='label label-danger'><%= @teachers_count %></span></h2>
        <h2><i>Teachers</i></h2>
      </div>
    </div>

    <div class='row m-b-lg m-t-lg'>
      <div class='col-lg-12'>
        <div class='ibox float-e-margins'>
          <div class='ibox-title'>
            <h5>Sections Details</h5>
            <div class='ibox-tools'>
              <a class='collapse-link'>
                <i class='fa fa-chevron-up'></i>
              </a>
            </div>
          </div>

          <div class='ibox-content'>
            <table class='table small'>
              <thead>
                <tr>
                  <th>Section</th>
                  <th>Incharge</th>
                  <th>Subjects</th>
                  <th>Teachers</th>
                  <th>Students</th>
                  <th>Actions</th>
                </tr>
              </thead>

              <tbody>
                <% @sections.each do |section| %>
                  <tr>
                    <td><%= link_to section.name, administrator_klass_section_path(@klass, section), class: 'btn-link' %></td>
                    <td><%= link_to section.incharge_name, administrator_teacher_path(section.incharge), class: 'btn-link' if section.incharge.present? %></td>
                    <td><%= section.display_subjects_count %></td>
                    <td><%= section.display_teachers_count %></td>
                    <td><%= section.display_students_count %></td>
                    <td>
                      <%= link_to administrator_klass_section_path(@klass, section), class: 'btn btn-success dim btn-outline btn-xs', data: { toggle: 'tooltip', placement: 'top' }, title: 'View' do %>
                        <i class='fa fa-eye'></i>
                      <% end %>

                      <%= link_to edit_administrator_klass_section_path(@klass, section), class: 'btn btn-info btn-outline dim btn-xs', data: { toggle: 'tooltip', placement: 'top' }, title: 'Edit' do %>
                        <i class='fa fa-pencil-square-o'></i>
                      <% end %>

                      <%= link_to administrator_klass_section_path(@klass, section), class: 'btn btn-danger btn-outline dim btn-xs', data: { toggle: 'tooltip', placement: 'top', behavior: 'delete', object: section.class.name }, title: 'Delete' do %>
                        <i class='fa fa-trash-o'></i>
                      <% end %>

                      <%= link_to administrator_section_students_path(section), class: 'btn btn-success btn-outline btn-xs m-l-lg' do %>
                        <i class='fa fa-users'></i> Manage Students
                      <% end %>

                      <%= link_to administrator_section_timetables_path(section), class: 'btn btn-info btn-outline btn-xs' do %>
                        <i class='fa fa-calendar'></i> Manage TimeTable
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
