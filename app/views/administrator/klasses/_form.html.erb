<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Add a class <small> Please fill the details correctly</small></h5>
        </div>
        <div class="ibox-content">
          <%= simple_form_for([:administrator, klass], validate: true, html: {class: "form-horizontal"}) do |f| %>
            <%= f.error_notification %>

            <div class='form-inputs'>
              <div class='form-group'>
                <div class='col-sm-4'></div>

                <div class='col-sm-4'>
                  <%= f.input :name, label: false, placeholder: 'Name', input_html: { class: 'form-control' } %>
                </div>

                <div class='col-sm-4'></div>
              </div>
            </div>

            <div class='form-inputs'>
              <div class='form-group'>
                <div class='col-sm-4'></div>

                <div class='col-sm-4'>
                  <%= f.input :code, label: false, placeholder: 'Code', input_html: { class: 'form-control' } %>
                </div>

                <div class='col-sm-4'></div>
              </div>
            </div>

            <div class="form-group m-t-lg">
              <div class="col-sm-4 col-sm-offset-4 text-center">
                <%= f.submit klass_submit_name(action_name), class: "btn btn-primary" do %>
                  <i class="fa fa-check">&nbsp;Submit
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
