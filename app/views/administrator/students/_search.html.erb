<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div id='left-section' class="col-sm-12">
      <div class="ibox">
        <div class="ibox-content">
          <h2>Students</h2>
          <p>
            Search results
          </p>
          <div class="full-height-scroll">
            <div class="table-responsive">
              <table class="table table-striped table-hover table-bordered">
                <thead>
                  <tr>
                    <th>Avatar</th>
                    <th>Name</th>
                    <th>Registration number</th>
                    <th>Roll number</th>
                    <th>Email</th>
                    <th class='col-sm-3'>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @students.each_with_index do |student, index| %>
                    <tr id="row-student-<%= student.id %>" class="selectable-row <% if index == 0 %> table-helighted-row <% end %>">
                      <td class="client-avatar">
                        <%= link_to "#student-#{student.id}", "data-toggle" => "tab", marker: "student-#{student.id}", class: "client-link selected-data-row" do %>
                          <%=image_tag student.avatar.url(:thumb), alt: "Image" %>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to "#student-#{student.id}", "data-toggle" => "tab", marker: "student-#{student.id}", class: "client-link selected-data-row" do %>
                          <%= student.name %>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to "#student-#{student.id}", "data-toggle" => "tab", marker: "student-#{student.id}", class: "client-link selected-data-row" do %>
                          <%= student.registration_number %>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to "#student-#{student.id}", "data-toggle" => "tab", marker: "student-#{student.id}", class: "client-link selected-data-row" do %>
                          <%= student.roll_number %>
                        <% end %>
                      </td>

                      <td>
                        <span class="contact-type"><i class="fa fa-envelope"></i></span>
                        <%= student.email %>
                      </td>

                      <td class='text-center'>
                        <%= link_to administrator_section_student_path(student.current_section(current_term.id), student), class: "btn btn-outline btn-success dim btn-xs", data: { toggle: 'tooltip', placement: 'top' }, title: 'View' do %>
                          <i class="fa fa-eye"></i>
                        <% end %>
                        <%= render 'student_results', student: student, text: "" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
