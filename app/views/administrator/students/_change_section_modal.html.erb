<div class="modal-dialog">
  <div class="modal-content animated flipInY">
    <div class="modal-header text-center">
      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4 class="modal-title">Change section of student <span class="text-warning"><%= student.name %></span></h4>
      <h5 class="modal-title">Current Section is <span class="text-info"><%= @section.name %></span></h5>
      <small class="font-bold">Student can only be transffered within same class sections.</small>
    </div>
    <%= form_tag(update_section_administrator_section_student_path(@section, student), class: 'form-horizontal', method: :put ) do %>
      <div class="modal-body">
        <div class='row'>
          <div class='form-inputs'>
            <div class='form-group'>
              <div class='modal-downdown col-sm-6 col-sm-offset-3 text-center'>
                <label class="control-label">Select Trasfer Section</label>
                <%= select_tag :new_section_id, options_for_select(@valid_sections), prompt: "Select Section", class: "select2_dropdown_modal", disabled:false, required: true %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer text-center">
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
    <% end %>
  </div>
</div>
