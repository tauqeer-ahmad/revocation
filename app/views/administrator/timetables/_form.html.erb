<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Timetable Form</h5>
        </div>
        <div class="ibox-content">
          <%= form_for([:administrator, @section, timetable], validate: true, html: {class: "form-horizontal"}) do |f| %>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Subject</label>
                <div class="col-sm-10">
                  <%= f.select :subject_id, @subjects, {include_blank: "Select Subject"}, {class: "form-control", required: true} %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Day</label>
                <div class="col-sm-10">
                  <%= f.select :day_of_week, @days, {include_blank: false}, {class: "form-control"} %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Start Time</label>
                <div class="col-sm-10">
                  <%= f.text_field :start_time, class: "form-control timepicker", value: timepicker_default_value(f.object.start_time) %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">End Time</label>
                <div class="col-sm-10">
                  <%= f.text_field :end_time, class: "form-control timepicker", value: timepicker_default_value(f.object.end_time) %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-4 col-sm-offset-2">
                <%= f.submit class: "btn btn-lg btn-primary" do %>
                  <i class="fa fa-check">&nbsp;Submit</i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
