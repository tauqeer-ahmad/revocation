<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Add a timetables for <%= @section.name%> <small> Please fill the details correctly</small></h5>
        </div>
        <div class="ibox-content">
          <%= nested_form_for([:administrator, @section], url: bulk_create_administrator_section_timetables_path(@section), method: :post,  html: {class: "form-horizontal"}, validate: true) do |f| %>
            <div class="row">
              <div class="col-sm-3">
                Subject
              </div>
              <div class="col-sm-3">
                Day
              </div>
              <div class="col-sm-2">
                Start Time
              </div>
              <div class="col-sm-2">
                End Time
              </div>
              <div class="col-sm-2">
                Actions
              </div>
            </div>
            <%= f.fields_for :timetables do |ff| %>
              <div class="row timetable_fields">
                <div class="col-sm-3">
                  <%= ff.select :subject_id, @subjects, {include_blank: "Select Subject"}, {class: "form-control"} %>
                </div>
                <div class="col-sm-3">
                  <%= ff.select :day_of_week, @days, {include_blank: false}, {class: "form-control"} %>
                </div>
                <div class="col-sm-2">
                  <%= ff.text_field :start_time, class: "form-control timepicker", value: timepicker_default_value(ff.object.start_time) %>
                </div>
                <div class="col-sm-2">
                  <%= ff.text_field :end_time, class: "form-control timepicker", value: timepicker_default_value(ff.object.end_time) %>
                </div>
                <div class="col-sm-2">
                  <%= ff.link_to_remove do %>
                    <i class="btn btn-danger fa fa-trash"></i>
                  <% end %>
                </div>
              </div>
            <% end %>
            <p class="m-t">
              <%= f.link_to_add "Add new timetable", :timetables, class: "btn btn-sm btn-success" %>
            </p>

           <div class='clearfix'></div>

            <div class='row'>
              <div class='col-sm-12'>
                <%= submit_tag 'Submit', class: 'btn btn-primary pull-right' %>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
