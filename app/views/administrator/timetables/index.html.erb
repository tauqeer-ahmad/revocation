<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>Timetable</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to "Home", root_path %>
      </li>
      <li>
        <%= link_to "Manage Sections", administrator_sections_path(klass_id: @section.klass.id) %>
      </li>
      <li class="active">
        <strong>Timetables</strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight">
  <div class="row">
    <div id='left-section' class="col-sm-12">
      <div class="ibox">
        <div class="ibox-content">
          <h2>Section TimeTable : <strong><%= @section.klass_name %></strong> - <strong><%= @section.name %></strong></h2>

          <div class="timetables-list">
            <ul class="nav nav-tabs">
              <span class="pull-right small text-muted">1406 Elements</span>
              <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-user"></i> TimeTable</a>
              </li>
              <li class=""><a data-toggle="tab" href="#tab-2"><i class="fa fa-briefcase"></i> Add New TimeTable</a></li>
            </ul>
            <div class="tab-content">
              <div id="tab-1" class="tab-pane active">
                <div class="row">
                  <div class="col-md-12">
                    <div class="panel panel-default" data-collapsed="0">
                      <div class="panel-body">
                        <table cellpadding="0" cellspacing="0" border="0" class="table table-bordered">
                          <tbody>
                            <% @days_hash.each do |day, name| %>
                              <tr>
                                <td width="100"><%= name %></td>
                                <td>
                                <% if @timetables[day].present? %>
                                  <% @timetables[day].each do |timetable| %>
                                      <div class="btn-group">
                                        <button class="btn btn-default btn-xs dropdown-toggle timetable-btn" data-toggle="dropdown">
                                          <%= timetable.subject_name %> <%= timetable.timings %> <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                          <li>
                                            <%= link_to "#" do %>
                                              <i class="entypo-trash"></i> <%= timetable.teacher_name %>
                                            <% end %>
                                          </li>
                                          <li>
                                           <%= link_to edit_administrator_section_timetable_path(@section, timetable) do %>
                                              <i class="fa fa-pencil-square-o"></i> Edit
                                            <% end %>
                                          </li>
                                          <li>
                                            <%= link_to administrator_section_timetable_path(@section, timetable), data: { behavior: 'delete', object: timetable.class.name } do %>
                                              <i class="fa fa-trash-o"></i> Delete
                                            <% end %>
                                          </li>
                                        </ul>
                                      </div>
                                  <% end %>
                                <% end %>
                                </td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div id="tab-2" class="tab-pane">
                <div class="full-height-scroll">
                  <%= render 'form', timetable: @new_timetable %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
