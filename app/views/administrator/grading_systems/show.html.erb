<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>
      <%= link_to :back, class: 'btn btn-sm btn-primary btn-outline m-t-n-xs' do %>
        <i class='fa fa-arrow-left'></i>
      <% end %>
      Grade Management
    </h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Home', root_path %>
      </li>
      <li>
        <%= link_to 'Grades', administrator_grading_systems_path %>
      </li>
      <li class="active">
        <strong><%= @grading_system.name %></strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5><%= @grading_system.name %></h5>
        </div>
        <div class="ibox-content">
          <div class="full-height-scroll">
            <div class="table-responsive">
              <table class="table table-striped table-hover selectable-table table-bordered">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Start Point</th>
                    <th>End Point</th>
                    <th>Points</th>
                  </tr>
                </thead>
                <tbody data-role="activerecord_sortable">
                  <%= render @grading_system.grades %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  Sortable.init();
<% end %>
