<div id='section-wrapper'>
  <div class='wrapper wrapper-content animated fadeInRight'>
    <div class='row m-b-lg'>
      <div class='col-lg-12 text-center'>
        <h1><%= @section.name %></h1>
        <h5><%= link_to @section.incharge_name, [:administrator, @section.incharge], class: 'btn btn-link' %></h5>
        <hr class='b-heading'>
      </div>
    </div>

    <div class='row m-b-lg'>
      <div class='col-lg-12 text-center'>
        <%= link_to edit_administrator_klass_section_path(@section.klass, @section), class: 'btn btn-info btn-outline btn-md' do %>
          <i class='fa fa-pencil-square-o'></i> Edit
        <% end %>

        <%= link_to administrator_klass_section_path(@section.klass, @section), data: { behavior: 'delete', object: @section.class.name }, class: 'btn btn-danger btn-outline btn-md' do %>
          <i class='fa fa-trash-o'></i> Delete
        <% end %>
      </div>
    </div>

    <div class='row m-b-lg'>
      <div class='col-lg-12 text-center'>
        <%= link_to administrator_section_students_path(@section), class: 'btn btn-success btn-outline btn-md' do %>
          <i class='fa fa-users'></i> Manage Students
        <% end %>

        <%= link_to administrator_section_timetables_path(@section), class: 'btn btn-info btn-outline btn-md' do %>
          <i class='fa fa-calendar'></i> Manage TimeTable
        <% end %>
      </div>
    </div>

    <div class='row m-b-lg'>
      <div class='col-lg-4 text-center'>
        <h2><span class='label label-info'><%= @section.display_students_count %></span></h2>
        <h2><i>Students</i></h2>
      </div>

      <div class='col-lg-4 text-center'>
        <h2><span class='label label-warning'><%= @section.display_subjects_count %></span></h2>
        <h2><i>Subjects</i></h2>
      </div>

      <div class='col-lg-4 text-center'>
        <h2><span class='label label-danger'><%= @section.display_teachers_count %></span></h2>
        <h2><i>Teachers</i></h2>
      </div>
    </div>
  </div>
</div>
