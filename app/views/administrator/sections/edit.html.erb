<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-10'>
    <h2>
      <%= link_to :back, class: 'btn btn-sm btn-white m-t-n-xs' do %>
        <i class='fa fa-arrow-left'></i>
      <% end %>

      Sections
    </h2>

    <ol class='breadcrumb'>
      <li>
        <%= link_to 'Home', root_path %>
      </li>

      <li>
        <%= link_to 'List', administrator_sections_path %>
      </li>

      <li class='active'>
        <strong><%= @section.title_with_klass %></strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Section Form <small> Please fill the details correctly</small></h5>
        </div>
        <div class="ibox-content">
          <%= render 'form', section: @section %>
        </div>
      </div>
    </div>
  </div>
</div>
