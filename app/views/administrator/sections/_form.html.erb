<%= simple_form_for([:administrator, @klass, @section], validate: true, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-group">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <%= f.input :name, label: false, input_html: { class: "form-control"} %>
      </div>
    </div>
  </div>

  <div class="form-inputs">
    <div class="form-group">
      <label class="col-sm-2 control-label">Nickname</label>
      <div class="col-sm-10">
        <%= f.input :nickname, label: false, input_html: { class: "form-control"} %>
      </div>
    </div>
  </div>
  
  <div class="form-inputs">
    <div class="form-group">
      <label class="col-sm-2 control-label">Select Section Incharge</label>
      <div class="col-sm-10">
        <%= f.input :incharge_id, label: false, collection: @institute_teachers, input_html: { class: "form-control"}, prompt: "Select Section Incharge" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit class: "btn btn-primary pull-right" do %>
        <i class="fa fa-check">&nbsp;Submit
      <% end %>
    </div>
  </div>
<% end %>
