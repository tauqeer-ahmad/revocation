<%= form_for([:administrator, @exam, exam_timetable], html: {class: "form-horizontal"}) do |f| %>
  <div class="form-inputs">
    <div class="form-group">
      <label class="col-sm-2 control-label">Select Class</label>
      <div class="col-sm-8">
        <%= f.select :klass_id, @klasses.pluck(:name, :id), {include_blank: "Select Class"}, class: "form-control select2_dropdown selectable_klass", required: true %>
      </div>
    </div>
  </div>

  <div class="form-inputs">
    <div class="form-group">
      <label class="col-sm-2 control-label">Select Section</label>
      <div class="col-sm-8">
        <%= f.select :section_id, options_for_select([]), {include_blank: "Select Section"}, {class: "form-control select2_dropdown selectable_section", required: true, disabled: false} %>
      </div>
    </div>
  </div>

  <div class="form-inputs">
    <div class="form-group">
      <label class="col-sm-2 control-label">Select Subject</label>
      <div class="col-sm-8">
         <%= f.select :subject_id, options_for_select([]), {include_blank: "Select Subject"}, {class: "form-control select2_dropdown selectable_subject", required: true, disabled: false} %>
      </div>
    </div>
  </div>

  <div class="form-inputs">
    <div class="form-group">
      <label class="col-sm-2 control-label">Date</label>
      <div class="col-sm-8">
        <%= f.text_field :paper_date, class: "form-control datepicker", required: true %>
      </div>
    </div>
  </div>

  <div class="form-inputs">
    <div class="form-group">
      <label class="col-sm-2 control-label">Start time</label>
      <div class="col-sm-8">
        <%= f.text_field :start_time, class: "form-control timepicker", required: true %>
      </div>
    </div>
  </div>

  <div class="form-inputs">
    <div class="form-group">
      <label class="col-sm-2 control-label">End Time</label>
      <div class="col-sm-8">
        <%= f.text_field :end_time, class: "form-control timepicker", required: true %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-1">
      <%= f.submit class: "btn btn-lg btn-primary pull-right" do %>
        <i class="fa fa-check">&nbsp;Submit</i>
      <% end %>
    </div>
  </div>
<% end %>
