<div class="full-height-scroll">
  <div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Percentage %</th>
          <th>Class</th>
          <th>Section</th>
          <th>Date</th>
          <th>Comment</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @exams.each_with_index do |exam, index| %>
          <tr>
            <td>
              <%= exam.name %>
            </td>
            <td>
              <%= exam.percentage %>
            </td>
            <td><%= exam.klass.name %></td>
            <td><%= exam.section.name %></td>
            <td>
              <%= exam.start_date %>
            </td>
            <td>
              <%= exam.comment %>
            </td>
            <td>
              <%= link_to [:administrator, exam], class: "btn btn-outline btn-success dim btn-xs", data: { toggle: 'tooltip', placement: 'top' }, title: 'View' do %>
                <i class="fa fa-eye"></i>
              <% end %>
              <%= link_to edit_administrator_exam_path(exam), class: "btn btn-outline btn-info dim btn-xs", data: { toggle: 'tooltip', placement: 'top' }, title: 'Edit' do %>
                <i class="fa fa-pencil-square-o"></i>
              <% end %>
              <%= link_to administrator_exam_path(exam), class: "btn btn-outline btn-danger dim btn-xs", data: { toggle: 'tooltip', placement: 'top' }, title: 'Delete', method: :delete, confirm: 'Are you sure?' do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
              <%= link_to administrator_exam_exam_timetables_path(exam), class: "btn btn-outline btn-info dim btn-xs" do %>
                <i class="fa fa-clock"></i> Manage Datesheet
              <% end %>
              <%= link_to(status_update_administrator_exam_path(exam), method: :post, class: "btn btn-outline #{entity_status_class(exam)} dim btn-xs") { entity_status(exam) } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
