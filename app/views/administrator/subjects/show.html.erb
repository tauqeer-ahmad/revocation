<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-10'>
    <h2>
      <%= link_to :back, class: 'btn btn-sm btn-white m-t-n-xs' do %>
        <i class='fa fa-arrow-left'></i>
      <% end %>

      Subjects
    </h2>
    <ol class='breadcrumb'>
      <li>
        <%= link_to 'Home', root_path %>
      </li>
      <li>

        <%= link_to 'List', administrator_subjects_path %>
      </li>

      <li class='active'>
        <strong><%= @subject.name %></strong>
      </li>
    </ol>
  </div>
</div>

<div id='subject-wrapper'>
  <div class='wrapper wrapper-content animated fadeInRight'>
    <div class='row m-b-lg'>
      <div class='col-lg-12 text-center'>
        <h1><%= @subject.name %></h1>
        <h2><%= @subject.description %></h2>
      </div>
    </div>

    <div class='row m-b-lg'>
      <div class='col-lg-12 text-center'>
        <%= link_to edit_administrator_subject_path(@subject), class: 'btn btn-info btn-outline btn-md' do %>
          <i class='fa fa-pencil-square-o'></i> Edit
        <% end %>

        <%= link_to administrator_subject_path(@subject), data: { behavior: 'delete', object: @subject.class.name }, class: 'btn btn-danger btn-outline btn-md' do %>
          <i class='fa fa-trash-o'></i> Delete
        <% end %>
      </div>
    </div>
  </div>
</div>
