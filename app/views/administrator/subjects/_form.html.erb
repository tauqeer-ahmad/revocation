<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Add a subject <small> Please fill the details correctly</small></h5>
        </div>
        <div class="ibox-content">
          <%= form_for([:administrator, subject], html: {class: 'form-horizontal'}) do |f| %>
            <div class='form-inputs'>
              <div class='form-group'>
                <div class='col-sm-4'></div>

                <div class='col-sm-4'>
                  <%= f.text_field :name, required: true, placeholder: 'Name', class: 'form-control' %>
                </div>

                <div class='col-sm-4'></div>
              </div>
            </div>

            <div class='form-inputs'>
              <div class='form-group'>
                <div class='col-sm-4'></div>

                <div class='col-sm-4'>
                  <%= f.text_field :description, placeholder: 'Description', class: 'form-control' %>
                </div>

                <div class='col-sm-4'></div>
              </div>
            </div>

            <div class='form-inputs'>
              <div class='form-group'>
                <div class='col-sm-4'></div>

                <div class='col-sm-4'>
                  <%= f.color_field :color, value: f.object.color || '#EB016E', class: 'input input-sm form-control color-field', list: 'colors' %>

                  <datalist id='colors'>
                    <% Subject::COLORS.each do |color| %>
                      <option><%= color %></option>
                    <% end %>
                  </datalist>
                </div>

                <div class='col-sm-4'></div>
              </div>
            </div>

            <div class="form-group m-t-lg">
              <div class="col-sm-4 col-sm-offset-4 text-center">
                <%= f.submit class: "btn btn-primary" do %>
                  <i class="fa fa-check">&nbsp;Submit
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
