<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-9'>
    <h2>
      <%= link_to :back, class: 'btn btn-sm btn-primary btn-outline m-t-n-xs' do %>
        <i class='fa fa-arrow-left'></i>
      <% end %>

      Notice Board
    </h2>

    <ol class='breadcrumb'>
      <li>
        <%= link_to 'Home', administrator_root_path %>
      </li>

      <li class='active'>
        <strong>Notices</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-sm-12">
      <div class="ibox">
        <div class="ibox-content">
          <div class="notice-list">
            <ul class="nav nav-tabs">
              <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-volume-up"></i> Notices</a></li>
              <li class=""><a data-toggle="tab" href="#tab-2"><i class="fa fa-plus"></i> Add new notice</a></li>
            </ul>
            <div class="tab-content">
              <div id="tab-1" class="tab-pane active">
                <%= render partial: 'shared/search_box', locals: {path: administrator_notices_path} %>
                <div class="full-height-scroll">
                  <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Title</th>
                          <th>Message</th>
                          <th>Type</th>
                          <th>Class</th>
                          <th>Section</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @notices.each_with_index do |notice, index| %>
                          <tr>
                            <td><%= index.succ %></td>
                            <td><%= notice.title %></td>
                            <td><%= notice.message %></td>
                            <td><%= notice.notice_type %></td>
                            <td><%= notice.klass.try(:name) %></td>
                            <td><%= notice.section.try(:name) %></td>
                            <td>
                              <%= link_to '#', class: 'btn btn-outline btn-success dim btn-xs', data: { toggle: 'modal', target: "#notice-modal-#{notice.id}" } do %>
                                <i class="fa fa-eye "></i>
                              <% end %>
                              <%= link_to edit_administrator_notice_path(notice), class: "btn btn-outline btn-info dim btn-xs", data: { toggle: 'tooltip', placement: 'top' }, title: 'Edit' do %>
                                <i class="fa fa-pencil-square-o"></i>
                              <% end %>
                               <%= link_to administrator_notice_path(notice), class: "btn btn-outline btn-danger dim btn-xs", data: { toggle: 'tooltip', placement: 'top', behavior: 'delete', object: notice.class.name }, title: 'Delete' do %>
                                <i class="fa fa-trash-o"></i>
                              <% end %>
                            </td>
                          </tr>
                          <%= render 'shared/notices/notices_message_modal', notice: notice %>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div id="tab-2" class="tab-pane">
                <div class="full-height-scroll">
                  <%= render 'form', { notice: @new_notice, edit: false } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  Notice.init();
  enable_autocomplete('/administrator/notices');
<% end %>
