<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Notice</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to "Home", root_path %>
      </li>
      <li>
        <%= link_to "Notice", administrator_notices_path %>
      </li>
      <li class="active">
        <strong><%= @notice.title %></strong>
      </li>
    </ol>
  </div>
</div>

<div id='notice-wrapper'>
  <div class='wrapper wrapper-content animated fadeInRight'>
    <div class='row m-b-lg'>
      <div class='col-lg-12 text-center'>
        <h1><%= @notice.title %></h1>
        <h2><%= @notice.message %></h2>
        <h2><%= @notice.klass.try(:name) %></h2>
        <h2><%= @notice.section.try(:name) %></h2>
      </div>
    </div>

    <div class='row m-b-lg'>
      <div class='col-lg-12 text-center'>
        <%= link_to edit_administrator_notice_path(@notice), class: 'btn btn-info btn-outline btn-md' do %>
          <i class='fa fa-pencil-square-o'></i> Edit
        <% end %>

        <%= link_to administrator_notice_path(@notice), data: { behavior: 'delete', object: @notice.class.name }, class: 'btn btn-danger btn-outline btn-md' do %>
          <i class='fa fa-trash-o'></i> Delete
        <% end %>
      </div>
    </div>
  </div>
</div>
