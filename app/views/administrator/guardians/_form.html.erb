<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Register a Guarian <small> Please fill the details correctly</small></h5>
        </div>
        <div class="ibox-content">
          <%= simple_form_for([:administrator, guardian], validate: true, html: {class: "form-horizontal"}) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">First Name</label>
                <div class="col-sm-10">
                  <%= f.input :first_name, label: false, input_html: { class: "form-control"} %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Last Name</label>
                <div class="col-sm-10">
                  <%= f.input :last_name, label: false, input_html: { class: "form-control"} %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">CNIC</label>
                <div class="col-sm-10">
                  <%= f.input :cnic, label: false, input_html: { class: "form-control"} %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Profession</label>
                <div class="col-sm-10">
                  <%= f.input :profession, label: false, input_html: { class: "form-control"} %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                  <%= f.input :email, label: false, input_html: { class: "form-control"} %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Upload Avatar</label>
                <div class="col-sm-10">
                  <%= f.input :avatar, label: false, as: :file, input_html: { class: "form-control"} %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <%= f.submit class: "btn btn-primary pull-right" do %>
                  <i class="fa fa-check"></i>&nbsp;Submit
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
