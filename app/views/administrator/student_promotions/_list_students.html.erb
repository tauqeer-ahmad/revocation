<div id="promoteable_students" class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-sm-12">
      <div class="ibox">
        <div class="ibox-content">
          <h2>Students</h2>
          <p>
            All students enrolled in class <strong><%= @section.klass_name %></strong> section <strong><%= @section.name %></strong>.
          </p>
          <div class="clients-list">
            <div class="full-height-scroll">
              <div class="table-responsive">
                <%= form_tag administrator_student_promotions_path do %>
                  <%= hidden_field_tag :section_id, @section.id %>
                  <%= hidden_field_tag :promotion_section_id, @promotion_section.id %>
                  <table class="table table-striped table-hover table-bordered">
                    <thead>
                      <tr>
                        <th>Avatar</th>
                        <th>Name</th>
                        <th>Roll number</th>
                        <th>Registration number</th>
                        <th>Email</th>
                        <th>Acadamic Results</th>
                        <th>
                          <div class="i-checks">
                            <label>
                              <%= check_box_tag 'select_all', false, false %>
                              Select All
                            </label>
                          </div>
                        </th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @students.each_with_index do |student, index| %>
                        <tr id="row-student-<%= student.id %>" class="selectable-row <% if index == 0 %> table-helighted-row <% end %>">
                          <td class="client-avatar">
                            <%= link_to "#student-#{student.id}", "data-toggle" => "tab", marker: "student-#{student.id}", class: "client-link selected-data-row" do %>
                              <%= image_tag student.avatar.url(:thumb), alt: "Image" %>
                            <% end %>
                          </td>
                          <td>
                            <%= link_to "#student-#{student.id}", "data-toggle" => "tab", marker: "student-#{student.id}", class: "client-link selected-data-row" do %>
                              <%= student.name %>
                            <% end %>
                          </td>
                          <td>
                            <%= link_to "#student-#{student.id}", "data-toggle" => "tab", marker: "student-#{student.id}", class: "client-link selected-data-row" do %>
                              <%= student.roll_number %>
                            <% end %>
                          </td>
                          <td>
                            <%= link_to "#student-#{student.id}", "data-toggle" => "tab", class: "client-link" do %>
                              <%= student.registration_number %>
                            <% end %>
                          </td>

                          <td> <span class="contact-type"><i class="fa fa-envelope"> </i></span> <%= student.email %></td>
                          <td>
                            <%= render 'administrator/students/student_results', student: student, text: "Academic Performance" %>
                          </td>
                          <td>
                            <div class="i-checks">
                              <%= check_box_tag 'students[][student_id]', student.id, false, class: "select_all_checkbox promotion_checkbox"  %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <div class="row">
                    <div class="col-md-12">
                      <center>
                        <button type="submit" class="btn btn-primary pull-right" data-toggle='tooltip' data-placement='top' data-behavior='promotion' data-title='Promotion'><i class="fa fa-check"></i> Enroll Selected Students</button>
                      </center>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
