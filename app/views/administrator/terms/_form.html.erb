<%= simple_form_for([:administrator, @term], validate: true, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-group">
      <label class="col-sm-2 control-label">Term Name</label>
      <div class="col-sm-10">
        <%= f.input :name, label: false, input_html: { class: "form-control"} %>
      </div>
    </div>
  </div>

  <div class="form-inputs">
    <div class="form-group">
      <label class="col-sm-2 control-label">Start Date</label>
      <div class="col-sm-4">
        <%= f.input :start_date, label: false, as: :string, input_html: { class: "form-control datepicker"} %>
      </div>

      <label class="col-sm-2 control-label">End Date</label>
      <div class="col-sm-4">
        <%= f.input :end_date, label: false, as: :string, input_html: { class: "form-control datepicker"} %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit class: "btn btn-primary pull-right" do %>
        <i class="fa fa-check">&nbsp;Submit
      <% end %>
    </div>
  </div>
<% end %>
