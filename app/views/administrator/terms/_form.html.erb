<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Start a new term <small> Please fill the details correctly</small></h5>
        </div>
        <div class="ibox-content">
          <%= form_for([:administrator, term], validate: true, html: {class: "form-horizontal"}) do |f| %>

            <div class="form-inputs m-t-md">
              <div class="form-group">
                <label class="col-sm-2 control-label">Term Name</label>
                <div class="col-sm-10">
                  <%= f.text_field :name, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Start Date</label>
                <div class="col-sm-4">
                  <%= f.text_field :start_date, class: "form-control datepicker", value: datepicker_default_value(f.object.start_date) %>
                </div>

                <label class="col-sm-2 control-label">End Date</label>
                <div class="col-sm-4">
                  <%= f.text_field :end_date, class: "form-control datepicker", value: datepicker_default_value(f.object.end_date) %>
                </div>
              </div>
            </div>
            <% if f.object.persisted? %>
              <div class="form-inputs">
                <div class="form-group">
                  <label class="col-sm-2 control-label">Term Status</label>
                  <div class="col-sm-4">
                    <%= f.select :status, options_for_select(Term.aasm.states_for_select), {include_blank: false}, { class: "form-control" } %>
                  </div>
                </div>
              </div>
            <% end %>

            <div class="form-group">
              <div class="col-sm-4 col-sm-offset-2">
                <%= f.submit class: "btn btn-lg btn-primary" do %>
                  <i class="fa fa-check">&nbsp;Submit
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

