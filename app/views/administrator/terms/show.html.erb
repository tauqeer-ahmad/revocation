<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-10'>
    <h2>Manage Classes for Term <%= @term.name %></h2>
    <ol class='breadcrumb'>
      <li>
        <%= link_to 'Home', root_path %>
      </li>
      <li>
        <%= link_to 'Terms', administrator_terms_path %>
      </li>
      <li class='active'>
        <strong>Term Record</strong>
      </li>
    </ol>
  </div>
  <div class='col-lg-2'>
  </div>
</div>

<div class='wrapper wrapper-content animated fadeInRight'>
  <div class='row m-b-lg'>
    <div class='col-lg-12 text-center <%= term_text_class(@term) %>'>
      <h1><%= @term.name %></h1>
    </div>
  </div>

  <div class='row m-b-lg'>
    <div class='col-lg-12 text-center'>
      <h2><%= @term.display_term_duration %></h2>
    </div>
  </div>

  <div class='row m-b-lg'>
    <div class='col-lg-12 text-center'>
      <h4><small>Status:</small> <%= @term.status.titleize %></h4>
    </div>
  </div>

  <div class='row m-b-lg'>
    <div class='col-lg-12 text-center'>
      <%= link_to edit_administrator_term_path(@term), class: 'btn btn-info btn-outline btn-md' do %>
        <i class='fa fa-pencil-square-o'></i> Edit
      <% end %>

      <%= link_to administrator_term_path(@term), data: { behavior: 'delete', object: @term.class.name }, class: 'btn btn-danger btn-outline btn-md' do %>
        <i class='fa fa-trash-o'></i> Delete
      <% end %>
    </div>
  </div>

  <div id='term-details'>
    <div class='row m-b-lg m-t-lg'>
      <div class='col-lg-12'>
        <div class='ibox float-e-margins'>
          <div class='ibox-title'>
            <h5>Term Details</h5>
            <div class='ibox-tools'>
              <a class='collapse-link'>
                <i class='fa fa-chevron-up'></i>
              </a>
            </div>
          </div>

          <div class='ibox-content'>
            <table class='table table-hover'>
              <thead>
                <tr>
                  <th>Sections</th>
                  <th>No of Teachers</th>
                  <th>No of Students</th>
                  <th>No of Subjects</th>
                  <th>No of Attendance Sheets</th>
                  <th>No of Assignments</th>
                  <th>No of Question Papers</th>
                  <th>No of Marksheets</th>
                </tr>
              </thead>

              <tbody>
                <% @sections.each do |section| %>
                  <tr>
                    <td><%= link_to "#{section.name} - (#{section.klass.name})", administrator_klass_section_path(section.klass, section.id), class: 'btn-link' %></td>
                    <td><%= section.teachers.length %></td>
                    <td><%= section.section_students.length %></td>
                    <td><%= section.subjects.length %></td>
                    <td><%= section.attendance_sheets.length %></td>
                    <td><%= section.assignments.length %></td>
                    <td><%= section.question_papers.length %></td>
                    <td><%= section.marksheets.length %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
