<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-12'>
    <h2>
      <%= link_to :back, class: 'btn btn-sm btn-primary btn-outline m-t-n-xs' do %>
        <i class='fa fa-arrow-left'></i>
      <% end %>

      Students
    </h2>

    <ol class='breadcrumb'>
      <li>
        <%= link_to 'Home', administrator_root_path %>
      </li>

      <li class='active'>
        <strong>Admissions</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-sm-12">
      <div class="ibox">
        <div class="ibox-content">
          <%= form_tag new_administrator_admission_path, method: :get do %>
            <%= hidden_field_tag :type, params[:bulk] %>
            <div class="row">
              <div class="col-md-5">
                <div class="form-group">
                  <label class="m-b-xs">Class</label>
                  <div class="input-group">
                    <%= select_tag :klass_id, options_for_select(@klasses.collect {|e| [ e.name, e.id ] }), prompt: "Select Class", class: "select2_dropdown selectable_klass", required: true %>
                  </div>
                </div>
              </div>

              <div class="col-md-5">
                <div class="form-group">
                  <label class="m-b-xs">Section</label>
                  <div class="input-group">
                    <%= select_tag :section_id, options_for_select([]), prompt: "Select Section", class: "select2_dropdown selectable_section", disabled: false, required: true %>
                  </div>
                </div>
              </div>
              <div class="col-md-2 m-t-xs-20">
                <center>
                  <%= button_tag class: "btn btn-primary btn-block" do %>
                    Proceed <i class="fa fa-forward-arrow"></i>
                  <% end %>
                </center>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

