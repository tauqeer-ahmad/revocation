<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Teacher registration</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to "Home", root_path %>
      </li>
      <li>
        <%= link_to "Teachers", administrator_teachers_path %>
      </li>
      <li class="active">
        <strong>New Teacher Form</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Register a Teacher <small> Please fill the details correctly</small></h5>
        </div>
        <div class="ibox-content">
          <%= simple_form_for([:administrator, teacher], validate: true, html: {class: "form-horizontal"}) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">First Name</label>
                <div class="col-sm-10">
                  <%= f.input :first_name, label: false, input_html: { class: "form-control"} %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Last Name</label>
                <div class="col-sm-10">
                  <%= f.input :last_name, label: false, input_html: { class: "form-control"} %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                  <%= f.input :email, label: false, input_html: { class: "form-control"} %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Upload Avatar</label>
                <div class="col-sm-10">
                  <%= f.input :avatar, label: false, as: :file, input_html: { class: "form-control"} %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <%= f.submit class: "btn btn-primary pull-right" do %>
                  <i class="fa fa-check">&nbsp;Submit
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
