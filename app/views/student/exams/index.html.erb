<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>Exams</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Home', root_path %>
      </li>
      <li class="active">
        <strong>Exams List</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-sm-12">
      <div class="ibox">
        <div class="ibox-content">
          <h2>Exams List</h2>
          <div class="clients-list">
            <%= render partial: 'shared/search_box', locals: {path: exams_path} %>
            <div class="full-height-scroll">
              <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Name</th>
                      <th>Date</th>
                      <th>Comment</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @exams.each_with_index do |exam, index| %>
                      <tr>
                        <td><%= index.succ %></td>
                        <td>
                          <%= exam.name %>
                        </td>
                        <td>
                          <%= exam.start_date %>
                        </td>
                        <td>
                          <%= exam.comment %>
                        </td>
                        <td>
                          <%= link_to exam, class: "btn btn-outline btn-success dim btn-xs", id: 'exam-link', remote: true,  data: {toggle:  "modal", target: '#exam-modal' }  do %>
                            <i class="fa fa-eye"></i>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class='modal inmodal' id='exam-modal' tabindex='-1' role='dialog' aria-hidden='true' style='display: none;'>
  <div class='modal-dialog modal-lg'>
    <div class='modal-content animated flipInY'>
    </div>
  </div>
</div>
<% content_for :javascript do %>
  enable_autocomplete('/exams')
  Exam.init()
<% end %>

