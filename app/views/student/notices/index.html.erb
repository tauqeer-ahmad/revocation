<div class='row wrapper border-bottom white-bg page-heading m-b-sm'>
  <div class='col-lg-9'>
    <h2>
      <%= link_to :back, class: 'btn btn-sm btn-primary btn-outline m-t-n-xs' do %>
        <i class='fa fa-arrow-left'></i>
      <% end %>

      Notice Board
    </h2>

    <ol class='breadcrumb'>
      <li>
        <%= link_to 'Home', root_path %>
      </li>

      <li class='active'>
        <strong>Notices</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div id='left-section' class="col-sm-12">
      <div class="ibox">
        <div class="ibox-title">
          <h5>Your Notifications</h5>
        </div>
        <div class="ibox-content">
          <div class="notice-list">
            <%= render partial: 'shared/search_box', locals: {path: notices_path} %>
            <%= render 'shared/notices/notices_table', notices: @notices %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  Notice.init();
  enable_autocomplete('/notices');
<% end %>
