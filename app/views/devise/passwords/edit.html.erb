<div class='middle-box text-center loginscreen animated fadeInDown'>

  <h1 class='logo-name'>
    <%= image_tag 'landing/revo-logo-crop.png', width: 150, height: 150 %>
  </h1>

  <h2>Change your password</h2>

  <p><%= resource_name.capitalize %></p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class='form-group'>
      <%= f.password_field :password, autofocus: true, placeholder: 'New Password', class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.password_field :password_confirmation, placeholder: 'Confirm new Password', class: 'form-control' %>
    </div>

    <div class='actions'>
      <%= f.submit 'Change my password', class: 'btn btn-primary block full-width m-b' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
  <%= render 'revoech_footer' %>
</div>
