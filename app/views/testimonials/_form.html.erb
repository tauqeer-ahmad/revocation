<div class='modal inmodal' id='feedback-modal' tabindex='-1' role='dialog' aria-hidden='true' style='display: none;'>
  <div class='modal-dialog'>
    <div class='modal-content animated flipInY'>
      <div class='modal-header'>
        <button type='button' class='close' data-dismiss='modal'>
          <span aria-hidden='true'>Ã—</span><span class='sr-only'>Close</span>
        </button>

        <h4 class='modal-title'>Feedback Form</h4>
        <small class='font-bold'>All the suggestions or queries will be welcomed.</small>
      </div>

      <%= form_for :testimonial, url: testimonials_path, html: {class: 'form-horizontal'} do |f| %>
        <div class='modal-body text-center'>
          <div class="form-group m-t-md">
            <div class="col-sm-8 col-sm-offset-2">
              <%= f.text_field :heading, required: true, maxlength: 100, placeholder: 'Heading', class: 'form-control' %>
            </div>
          </div>

          <div class="form-group m-t-md">
            <div class="col-sm-8 col-sm-offset-2">
              <%= f.text_area :message, required: true, maxlength: 255, rows: 5, placeholder: 'Message', class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class='modal-footer'>
          <div class='text-center'>
            <%= f.submit 'Send Email', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
