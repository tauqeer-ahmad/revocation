<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-9'>
    <h2>
      <%= link_to :back, class: 'btn btn-sm btn-primary btn-outline m-t-n-xs' do %>
        <i class='fa fa-arrow-left'></i>
      <% end %>

      Assignments
    </h2>

    <ol class='breadcrumb'>
      <li>
        <%= link_to 'Home', root_path %>
      </li>

      <li>
        <%= link_to 'Assignments', list_assignments_path(@assignment.section_id, @assignment.subject_id) %>
      </li>

      <li class='active'>
        <strong>New</strong>
      </li>
    </ol>
  </div>
</div>

<div class='wrapper wrapper-content animated fadeInRight'>
  <div class='row'>
    <div class='col-sm-12'>
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>
            Assignment - <%= @assignment.section.klass.name %> - <%= @assignment.section.name %> - <%= @assignment.subject.name %>
          </h5>

          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
          </div>
        </div>

        <div class="ibox-content">
          <%= form_for(@assignment, html: {class: "form-vertical", id: "assignment-form"}) do |f| %>
            <%= render partial: 'teacher/assignments/form_content', locals: {f: f} %>
            <%= f.hidden_field :section_id %>
            <%= f.hidden_field :subject_id %>
            <hr/>
            <div class= 'row m-t-lg'>
              <div class='col-md-11'>
                <%= submit_tag "Publish", class: "btn btn-success m-l-md pull-right" %>
                <%= link_to 'Back', list_assignments_path(section_id: @assignment.section_id, subject_id: @assignment.subject_id), class: 'btn btn-info pull-right' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
