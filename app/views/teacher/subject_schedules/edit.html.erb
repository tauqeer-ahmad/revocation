<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-9'>
    <h2>
      <%= link_to :back, class: 'btn btn-sm btn-primary btn-outline m-t-n-xs' do %>
        <i class='fa fa-arrow-left'></i>
      <% end %>

      Subject Schedules
    </h2>

    <ol class='breadcrumb'>
      <li>
        <%= link_to 'Home', root_path %>
      </li>

      <li>
        <%= link_to 'List', [:subject_schedules] %>
      </li>

      <li>
        <%= link_to @schedule.subject.name, '#' %>
      </li>

      <li class='active'>
        <strong>Edit</strong>
      </li>
    </ol>
  </div>
</div>

<div class='wrapper wrapper-content animated fadeInRight'>
  <div class='row'>
    <div class='col-sm-12'>
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>
            <%= @schedule.klass.name %> - <%= @schedule.section.name %> Schedule for
            <span class='label label-warning pull-right' style='background-color: <%= @schedule.subject.color %>'><%= @schedule.subject.name %></span>
          </h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <%= form_for(@schedule, html: { class: "form-vertical", id: "schedule-form" }) do |f| %>
            <%= render partial: 'teacher/subject_schedules/form_content', locals: {f: f} %>
            <hr class='b-heading'>

            <div class='form-group text-center'>
              <div class='row'>
                <div class='col-sm-12'>
                  <%= submit_tag 'Update', class: 'btn btn-lg btn-primary' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
