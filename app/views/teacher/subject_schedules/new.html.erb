<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-9'>
    <h2>
      <%= link_to :back, class: 'btn btn-sm btn-white m-t-n-xs' do %>
        <i class='fa fa-arrow-left'></i>
      <% end %>

      Subject Schedules
    </h2>

    <ol class='breadcrumb'>
      <li>
        <%= link_to 'Home', root_path %>
      </li>

      <li>
        <%= link_to 'List', [:subject_schedules] %>
      </li>

      <li class='active'>
        <strong>New</strong>
      </li>
    </ol>
  </div>
</div>

<div class='wrapper wrapper-content animated fadeInRight'>
  <div class='row'>
    <div class='col-sm-12'>
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Subject Schedule</h5>
          <div class="ibox-tools">
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>

        <div class="ibox-content">
          <%= form_for(@schedule, html: { class: "form-vertical", id: "schedule-form" }) do |f| %>
            <%= render partial: 'teacher/subject_schedules/form_content', locals: {f: f} %>
            <hr/>
            <div class= 'row m-t-lg'>
              <div class='col-md-11'>
                <%= submit_tag "Publish", class: "btn btn-success m-l-md pull-right" %>
                <%= link_to 'Back', subject_schedules_path, class: 'btn btn-info pull-right' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  SubjectSchedule.init();
<% end %>
