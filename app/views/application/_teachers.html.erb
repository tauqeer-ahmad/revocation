<div class='row'>
  <div class='col-lg-12'>
    <div class='ibox float-e-margins'>
      <div class='ibox-title'>
        <%= link_to administrator_klass_section_path(section.klass.id, section), class: 'btn-link p-xxs' do %>
          <h5>Section - <%= section&.name %></h5>
        <% end %>

        <div class='ibox-tools'>
          <a class='collapse-link'>
            <i class='fa fa-chevron-up'></i>
          </a>
        </div>
      </div>

      <div class='ibox-content'>
        <table class='table table-hover table-striped'>
          <thead>
            <tr>
              <th>Avatar</th>
              <th>Name</th>
              <th>Email</th>
              <th>Subject</th>
            </tr>
          </thead>

          <tbody>
            <% section.section_subject_teachers.each do |subject_teacher| %>
              <% teacher = subject_teacher.teacher %>
              <% subject = subject_teacher.subject %>

              <tr>
                <td><%= link_to image_tag(teacher.avatar.url(:medium), width: 50, height: 50, class: 'img-circle'), administrator_teacher_path(teacher), class: 'btn-link' %></td>
                <td><%= link_to teacher&.name, administrator_teacher_path(teacher), class: 'btn-link' %></td>
                <td><%= teacher&.email %></td>
                <td><%= subject&.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
