<div class='row'>
  <div class='col-lg-12'>
    <div class='ibox float-e-margins'>
      <div class='ibox-title'>
        <%= link_to administrator_klass_section_path(section.klass.id, section), class: 'btn-link p-xxs' do %>
          <h5>Section - <%= section&.name %></h5>
        <% end %>
      </div>

      <div class='ibox-content'>
        <table class='table table-hover table-striped'>
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
            </tr>
          </thead>

          <tbody>
            <% section.subjects.each do |subject| %>
              <tr>
                <td style='color: <%= subject.color %>;'><%= subject.name %></td>
                <td><%= subject.description %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
