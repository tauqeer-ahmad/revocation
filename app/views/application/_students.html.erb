<div class='row'>
  <div class='col-lg-12'>
    <div class='ibox float-e-margins'>
      <div class='ibox-title'>
        <%= link_to administrator_klass_section_path(section.klass.id, section), class: 'btn-link p-xxs' do %>
          <h5>Section - <%= section&.name %></h5>
        <% end %>
      </div>

      <div class='ibox-content'>
        <table class='table table-hover table-striped'>
          <thead>
            <tr>
              <th>Avatar</th>
              <th>Name</th>
              <th>Email</th>
              <th>Guardian</th>
            </tr>
          </thead>

          <tbody>
            <% section.students.each do |student| %>
              <tr>
                <td><%= link_to image_tag(student.avatar.url(:medium), width: 50, height: 50, class: 'img-circle'), administrator_section_student_path(student), class: 'btn-link' %></td>
                <td><%= link_to student&.name, administrator_section_student_path(student), class: 'btn-link' %></td>
                <td><%= student&.email %></td>
                <td><%= link_to student.guardian.name, administrator_guardian_path(student.guardian), class: 'btn-link' if student&.guardian.present? %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
