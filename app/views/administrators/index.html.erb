<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-9'>
    <h2>
      <%= link_to :back, class: 'btn btn-sm btn-white m-t-n-xs' do %>
        <i class='fa fa-arrow-left'></i>
      <% end %>

      Administrators
    </h2>

    <ol class='breadcrumb'>
      <li>
        <%= link_to 'Home', administrator_root_path %>
      </li>

      <li class='active'>
        <strong>List</strong>
      </li>
    </ol>
  </div>
</div>

<div class='wrapper wrapper-content animated fadeInRight'>
  <div class='row'>
    <div class='col-sm-12'>
      <div class='ibox'>
        <div class='ibox-content'>
          <div class='row'>
            <% @administrators.each do |administrator| %>
              <div class='col-lg-3 m-b-md'>
                <div class='ibox-content text-center gray-bg'>
                  <h3><%= administrator.name %></h3>
                  <div class='m-b-sm'>
                    <%= image_tag(administrator.avatar.url(:medium), width: 100, height: 100, class: 'img-circle', alt: 'image') %>
                  </div>

                  <p class='font-bold'>
                    <i class='fa fa-envelope'></i> <%= administrator.email %>
                  </p>

                  <div class='m-t-xs text-center'>
                    <%= link_to '#', class: message_class_with_outline(administrator) do %>
                      <i class="fa fa-envelope"></i> Message
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
