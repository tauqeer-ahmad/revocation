<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Administrator registration for <%= link_to @institution.name, admin_institutions_path %></h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Home</a>
      </li>
      <li>
        <%= link_to "Institutions", admin_institutions_path %>
      </li>
      <li>
        <%= link_to "Administrator", admin_institution_administrators_path(@institution) %>
      </li>
      <li class="active">
        <strong>New Administrator Form</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Register an institution<small> Please fill the details correctly</small></h5>
        </div>
        <div class="ibox-content">
          <%= form_for([:admin, @institution, @administrator], validate: true, html: {class: "form-horizontal"}) do |f| %>
            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">First Name</label>
                <div class="col-sm-10">
                  <%= f.text_field :first_name, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Last Name</label>
                <div class="col-sm-10">
                  <%= f.text_field :last_name, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                  <%= f.email_field :email, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-sm-2 control-label">Upload Avatar</label>
                <div class="col-sm-10">
                  <%= f.file_field :avatar, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <%= f.submit class: "btn btn-lg btn-primary pull-right" do %>
                  <i class="fa fa-check">&nbsp;Submit
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
