<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Institute Registration</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Home</a>
      </li>
      <li>
       <%= link_to "Institutions", admin_institutions_path %>
      </li>
      <li class="active">
        <strong>New Institution Form</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Register an institution<small> Please fill the details correctly</small></h5>
        </div>
        <div class="ibox-content">
          <%= form_for([:admin, @institution], validate: true, html: {class: "form-horizontal"}) do |f| %>
            <div class="form-group">
              <label class="col-sm-2 control-label">Institution Name</label>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Subdomain</label>
              <div class="col-sm-10">
                <%= f.text_field :subdomain, class: "form-control", disabled: f.object.persisted? %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Institute Location</label>
              <div class="col-sm-10">
                <%= f.text_field :location, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">City</label>
              <div class="col-sm-10">
                <%= f.text_field :city, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Country</label>
              <div class="col-sm-10">
                <%= f.country_select :country, { priority_countries: ["Pk", "IN", "SA", "KE"], selected: "PK" }, { class: "form-control"} %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Sector</label>
              <div class="col-sm-10">
                <%= f.select :sector, options_for_select(Institution::SECTORS), {prompt: "Select Sector"}, {class: "form-control"} %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Level</label>
              <div class="col-sm-10">
                <%= f.select :level, options_for_select(Institution::LEVELS), {prompt: "Select School Level"}, { class: "form-control"} %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Description</label>
              <div class="col-sm-10">
                <%= f.text_field :description, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Latitude and Longitude</label>
              <div class="col-sm-5">
                <%= f.text_field :latitude, class: "form-control" %>
              </div>
              <div class="col-sm-5">
                <%= f.text_field :longitude, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.submit class: "btn btn-lg btn-primary pull-right" do %>
                  <i class="fa fa-check">&nbsp;Submit
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
