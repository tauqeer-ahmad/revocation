<div class="full-height-scroll">
  <div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Message</th>
          <th>Type</th>
          <th>Class</th>
          <th>Section</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% notices.each_with_index do |notice, index| %>
          <tr>
            <td><%= index.succ %></td>
            <td><%= notice.title %></td>
            <td><%= notice.message %></td>
            <td><%= notice.notice_type %></td>
            <td><%= notice.klass.try(:name) %></td>
            <td><%= notice.section.try(:name) %></td>
            <td>
              <%= link_to '#', class: 'btn btn-outline btn-success dim btn-xs', data: { toggle: 'modal', target: "#notice-modal-#{notice.id}" } do %>
                <i class="fa fa-eye "></i>
              <% end %>
            </td>
          </tr>
          <%= render 'shared/notices/notices_message_modal', notice: notice %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
