<div class='modal-header'>
  <button type='button' class='close' data-dismiss='modal'>
    <span aria-hidden='true'>Ã—</span><span class='sr-only'>Close</span>
  </button>
</div>
<div class='modal-body text-center'>
  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <div class="col-sm-12">
        <div class="ibox">
          <div class="ibox-content">
            <h2>Exam Schedule For <strong><%= @exam.name %></strong></h2>
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default" data-collapsed="0">
                  <div class="panel-body">
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-bordered">
                      <tbody>
                        <% @exam_timetables.each do |date, timetables| %>
                          <tr>
                            <td width="100"><%= format_paper_date(date) %></td>
                            <td>
                              <% timetables.each do |timetable| %>
                                <div class="btn-group">
                                  <button class="btn btn-default dropdown-toggle timetable-btn" data-toggle="dropdown">
                                    <%= timetable.klass_name %> - <%= timetable.subject_name %>
                                    <%= timetable.timings %>
                                  </button>
                                </div>
                              <% end %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

