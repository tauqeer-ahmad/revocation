<% student_section = result.current_section(current_term)%>
<div class="col-lg-4">
  <div class="ibox">
    <div class="ibox-title">
      <span class="label label-primary pull-right"><%= result.class.name %></span>
      <h5><%= result.name %> <i class="fa <%= select_gender_icon(result.gender) %>"></i></h5>
    </div>
    <div class="ibox-content text-center">
      <div class='m-b-sm'>
        <%= image_tag(result.avatar.url(:medium), width: 100, height: 100, class: 'img-circle', alt: 'image') %>
      </div>
      <h6>Registration Number: <%= result.registration_number %></h6>
      <p class='font-bold'><i class="fa fa-envelope"></i> <%= result.email %></p>
      <p class='font-bold'><i class="fa fa-phone"></i> <%= result.phone %></p>

      <div class="m-t-xs text-center">
        <%= link_to show_path(result), class: "btn btn-outline btn-success dim btn-xs", data: { toggle: 'tooltip', placement: 'top' }, title: 'View' do %>
          <i class="fa fa-eye"></i>
        <% end if current_user.administrator? %>
        <%= link_to single_attendance_administrator_student_attendances_path(result), class: "btn btn-outline btn-warning dim btn-xs", data: { toggle: 'tooltip', placement: 'top' }, title: 'Attendance' do %>
          <i class="fa fa-check-square-o"></i>
        <% end if current_user.administrator? %>
        <%= link_to edit_administrator_section_student_path(student_section, result), class: "btn btn-outline btn-info dim btn-xs", data: { toggle: 'tooltip', placement: 'top' }, title: 'Edit' do %>
          <i class="fa fa-pencil-square-o"></i>
        <% end if current_user.administrator? %>
        <%= link_to single_attendance_student_attendances_path(result), class: 'btn btn-outline btn-warning dim btn-xs', data: { toggle: 'tooltip', placement: 'top' }, title: 'Attendnace' do %>
          <i class='fa fa-check-square-o'></i>
        <% end if current_user.teacher? %>
        <%= render 'shared/student/student_results', student: result, text: "", section: student_section %>
      </div>
      <div class="row  m-t-sm">
        <div class="col-sm-4">
          <div class="font-bold">Class</div>
          <%= student_section.klass&.name %>
        </div>
        <div class="col-sm-4">
          <div class="font-bold">Section</div>
           <%= student_section&.name %>
        </div>
        <div class="col-sm-4 text-right">
          <div class="font-bold">Roll Number</div>
           <%= result.roll_number %>
        </div>
      </div>
    </div>
  </div>
</div>
